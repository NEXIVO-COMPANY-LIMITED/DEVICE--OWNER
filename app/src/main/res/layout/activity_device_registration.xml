<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:src="@drawable/nexivo"
        android:contentDescription="App Logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device Registration"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your loan number to register this device. The loan will be validated when the device data is sent to the server."
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvLoanFormat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Format: LN-20260128-00001"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="italic" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Loan Number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLoanNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:textSize="16sp"
            android:padding="16dp"
            android:maxLength="17"
            android:fontFamily="monospace" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvValidationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:minHeight="20dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnValidateLoan"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continue with Loan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_color"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make sure you have the correct loan number in format LN-YYYYMMDD-NNNNN provided by your shop"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="16dp" />

</LinearLayout>