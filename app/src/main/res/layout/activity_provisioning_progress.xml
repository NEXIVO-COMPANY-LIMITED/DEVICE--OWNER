<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="32dp">

    <!-- Top Section: Brand Identity -->
    <LinearLayout
        android:id="@+id/logo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/nexivo"
            android:contentDescription="Company Logo"
            android:alpha="0.9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Secure Provisioning"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#111827"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Configuring device management services"
            android:textSize="15sp"
            android:textColor="#6B7280"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- Center Section: Progress & Status -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/progress_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#E5E7EB"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/warning_container"
        app:layout_constraintTop_toBottomOf="@id/logo_container"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/provisioning_progress_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:indicatorSize="48dp"
                app:trackThickness="4dp"
                app:indicatorColor="#10B981"
                app:trackColor="#F3F4F6" />

            <TextView
                android:id="@+id/tv_current_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Initializing system components..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="This process is automated and secure"
                android:textSize="13sp"
                android:textColor="#9CA3AF"
                android:textAlignment="center" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Section: Safety Instruction -->
    <LinearLayout
        android:id="@+id/warning_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="#FEE2E2"
            android:backgroundTint="#FEE2E2"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KEEP DEVICE POWERED ON"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#EF4444"
            android:letterSpacing="0.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Do not interrupt the initialization process"
            android:textSize="12sp"
            android:textColor="#9CA3AF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>