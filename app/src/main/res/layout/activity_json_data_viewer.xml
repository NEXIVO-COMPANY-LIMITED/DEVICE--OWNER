<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JSON Data Viewer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading JSON data..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:paddingBottom="8dp" />

    </LinearLayout>

    <!-- Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter: "
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingEnd="8dp" />

        <Spinner
            android:id="@+id/filterSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/copyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:background="#2196F3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/exportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:background="#FF9800"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="#F44336"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- JSON Content Display -->
    <ScrollView
        android:id="@+id/jsonScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/jsonTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading JSON data..."
            android:textSize="12sp"
            android:typeface="monospace"
            android:textColor="#333333"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textIsSelectable="true"
            android:scrollHorizontally="true"
            android:singleLine="false" />

    </ScrollView>

    <!-- Footer Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ All data sent to server is automatically logged in JSON format"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>