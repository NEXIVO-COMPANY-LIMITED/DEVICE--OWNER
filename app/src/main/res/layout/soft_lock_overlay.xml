<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Background Overlay for Color Tinting -->
    <View
        android:id="@+id/backgroundOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:layout_gravity="center" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Lock Icon -->
        <ImageView
            android:id="@+id/ivLockIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_lock_idle_lock"
            android:tint="#FFC107"
            android:layout_marginBottom="24dp" />

        <!-- Dynamic Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEVICE ACCESS RESTRICTED"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- Primary Message (Large, Prominent) -->
        <TextView
            android:id="@+id/tvPrimaryMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DO NOT UNINSTALL THE APPLICATION"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:textAlignment="center"
            android:background="#33FF5722"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Warning Message -->
        <TextView
            android:id="@+id/tvWarningMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This application is required for device management and cannot be removed."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- Action Advice -->
        <TextView
            android:id="@+id/tvActionAdvice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attempting to uninstall this app violates your device agreement and may result in permanent device lock."
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Lock Reason Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33FFFFFF"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Reason"
                android:textSize="12sp"
                android:textColor="#CCCCCC"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvLockReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unauthorized app uninstall attempt detected"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- Lock Time Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvLockTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restricted at: Jan 29, 2026 14:30:00"
                android:textSize="12sp"
                android:textColor="#CCCCCC"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- Persistent Message (hidden by default) -->
        <TextView
            android:id="@+id/tvPersistentMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This application CANNOT be uninstalled. It is required for device management."
            android:textSize="14sp"
            android:textColor="#FF5722"
            android:textAlignment="center"
            android:background="#33FF5722"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            android:textStyle="bold" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnContactSupport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CONTACT SUPPORT"
                android:textColor="#FFFFFF"
                android:background="#2196F3"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnDismiss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I WILL NOT UNINSTALL"
                android:textColor="#FFFFFF"
                android:background="#4CAF50"
                android:layout_marginStart="8dp"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>