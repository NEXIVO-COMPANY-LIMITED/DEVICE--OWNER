<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Hero Section: Status Header -->
            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="40dp">

                <ImageView
                    android:id="@+id/iv_failure_icon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_device_error"
                    app:tint="@color/error"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="Failure Icon" />

                <TextView
                    android:id="@+id/compatibility_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Not Supported"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textAlignment="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/compatibility_error_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This device does not meet the necessary requirements for Device Owner installation."
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:textAlignment="center"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Card: Your Device Specifications -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/device_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_light"
                app:cardBackgroundColor="@color/surface_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device Information"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="20dp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="false">

                        <!-- Brand -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Brand"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary" />
                            <TextView
                                android:id="@+id/tv_device_brand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="---"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Model -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Model"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary" />
                            <TextView
                                android:id="@+id/tv_device_model"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="---"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Manufacturer -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manufacturer"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary" />
                            <TextView
                                android:id="@+id/tv_device_manufacturer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="---"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Android Version -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Android"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary" />
                            <TextView
                                android:id="@+id/tv_device_android_version"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="---"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Compatibility Issues -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/issues_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/error_light"
                app:cardBackgroundColor="@color/error_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Found Issues"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_error_container"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tv_failure_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Brand not supported\n• Android version below 13"
                        android:textColor="@color/on_error_container"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Requirements -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/requirements_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/primary_light"
                app:cardBackgroundColor="@color/primary_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="System Requirements"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_primary_container"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Google Pixel device series\n✓ Android 13 or higher\n✓ Official firmware (No custom ROMs)"
                        android:textColor="@color/on_primary_container"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Spacer to push footer down -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Footer Section: Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_exit_app"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Close Application"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    android:backgroundTint="@color/error"
                    android:textColor="@color/on_error"
                    android:elevation="0dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/btn_security_standards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:textAlignment="center"
                    android:textColor="@color/link"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
