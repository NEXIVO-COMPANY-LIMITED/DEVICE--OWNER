<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Top Failure Header -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_failure_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_device_error"
            app:tint="#EF4444"
            android:layout_marginBottom="24dp"
            android:contentDescription="Failure Icon" />

        <TextView
            android:id="@+id/compatibility_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compatibility Failed"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/compatibility_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="This device does not meet the minimum security requirements for provisioning."
            android:textSize="16sp"
            android:textColor="#6B7280"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- Detailed Error Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/error_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#FEE2E2"
        app:cardBackgroundColor="#FEF2F2"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requirements Not Met"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#991B1B"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_failure_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Android 13 or higher required\n• Original manufacturer firmware required"
                android:textColor="#B91C1C"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Footer Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_exit_app"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Close Application"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="#374151"
            android:elevation="0dp" />

        <TextView
            android:id="@+id/btn_security_standards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="View Security Standards"
            android:textAlignment="center"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>