<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Back up all shared preferences which include device identification and registration status -->
        <include domain="sharedpref" path="." />
        <!-- If you use a database, include it here. -->
        <include domain="database" path="." />
        <!-- Exclude any sensitive files that should NOT be in the cloud if necessary -->
        <!-- <exclude domain="sharedpref" path="device_registration.xml" /> -->
    </cloud-backup>
    <device-transfer>
        <!-- Rules for device-to-device transfers. -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
    </device-transfer>
</data-extraction-rules>