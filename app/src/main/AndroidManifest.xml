<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Device information permissions -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" tools:ignore="ProtectedPermissions" />
    
    <!-- Storage permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Camera permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    
    <!-- Boot receiver permission -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- Overlay permissions for soft lock -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Device Owner specific permissions -->
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
    <uses-permission android:name="android.permission.STATUS_BAR" />
    <uses-permission android:name="android.permission.SYSTEM_UI" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.INTERNAL_SYSTEM_WINDOW" tools:ignore="ProtectedPermissions" />
    
    <!-- Wake lock permission -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Auto-update from GitHub Releases -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.INSTALL_PACKAGES" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.DELETE_PACKAGES" tools:ignore="ProtectedPermissions" />
    
    <!-- Power management permissions -->
    <uses-permission android:name="android.permission.DEVICE_POWER" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.REBOOT" tools:ignore="ProtectedPermissions" />
    
    <!-- Notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Foreground service permission -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    
    <!-- Account management permissions -->
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    
    <!-- Battery Optimization -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:name=".DeviceOwnerApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/nexivo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nexivo"
        android:supportsRtl="true"
        android:theme="@style/Theme.DEVICEOWNER"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <property
            android:name="android.app.PROPERTY_FOREGROUND_SERVICE_TYPES"
            android:value="dataSync" />

        <!-- Registration flow -->
        <activity
            android:name=".ui.activities.registration.RegistrationStatusActivity"
            android:exported="true"
            android:theme="@style/Theme.DEVICEOWNER">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.main.DeviceDetailActivity" android:theme="@style/Theme.DEVICEOWNER" />
        <activity android:name=".presentation.activities.DeviceRegistrationActivity" android:theme="@style/Theme.DEVICEOWNER" />
        <activity android:name=".presentation.activities.RegistrationErrorViewerActivity" android:theme="@style/Theme.DEVICEOWNER" />
        <activity android:name=".ui.activities.data.DeviceDataCollectionActivity" android:theme="@style/Theme.DEVICEOWNER" />

        <!-- SEPARATE LOCK ACTIVITIES (ORGANIZED) -->
        <activity
            android:name=".ui.activities.lock.payment.PaymentOverdueActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.DEVICEOWNER" />

        <activity
            android:name=".ui.activities.lock.security.SecurityViolationActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.DEVICEOWNER" />

        <activity
            android:name=".ui.activities.lock.payment.SoftLockReminderActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.DEVICEOWNER" />

        <activity
            android:name=".ui.activities.lock.system.DeactivationActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.DEVICEOWNER" />

        <activity
            android:name=".ui.activities.lock.system.HardLockGenericActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.DEVICEOWNER" />

        <activity
            android:name=".ui.activities.lock.payment.EnhancedSoftLockActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.DEVICEOWNER" />

        <!-- Android 12+ Provisioning -->
        <activity
            android:name=".ui.activities.provisioning.mode.ProvisioningModeActivity"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.app.action.GET_PROVISIONING_MODE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.provisioning.consent.DataPrivacyConsentActivity" />
        <activity android:name=".ui.activities.provisioning.progress.ProvisioningProgressActivity" />

        <!-- Updated Compatibility Activities paths -->
        <activity
            android:name=".ui.activities.provisioning.compatibility.main.DeviceCompatibilityCheckActivity"
            android:exported="false"
            android:theme="@style/Theme.DEVICEOWNER" />

        <activity
            android:name=".ui.activities.provisioning.compatibility.screens.CompatibilitySuccessActivity"
            android:exported="false"
            android:theme="@style/Theme.DEVICEOWNER" />

        <activity
            android:name=".ui.activities.provisioning.compatibility.screens.CompatibilityFailureActivity"
            android:exported="false"
            android:theme="@style/Theme.DEVICEOWNER" />

        <activity android:name=".ui.activities.registration.RegistrationSuccessActivity" />

        <activity android:name=".ui.activities.provisioning.policy.PolicyComplianceActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.app.action.ADMIN_POLICY_COMPLIANCE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Receivers -->
        <receiver android:name=".receivers.AdminReceiver" android:exported="true" android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLE_REQUESTED" />
                <action android:name="android.app.action.PROVISION_MANAGED_DEVICE" />
            </intent-filter>
            <meta-data android:name="android.app.device_admin" android:resource="@xml/device_admin_receiver" />
        </receiver>
        
        <receiver android:name=".receivers.BootReceiver" android:exported="false" android:enabled="true" android:directBootAware="true">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.PaymentOverdueReceiver" android:exported="false"><intent-filter><action android:name="com.example.deviceowner.PAYMENT_OVERDUE" /></intent-filter></receiver>
        <receiver android:name=".receivers.TamperLockReceiver" android:exported="false"><intent-filter><action android:name="com.example.deviceowner.TAMPER_LOCK" /></intent-filter></receiver>
        <receiver android:name=".receivers.PaymentReminderReceiver" android:exported="false"><intent-filter><action android:name="com.example.deviceowner.PAYMENT_REMINDER" /></intent-filter></receiver>
        <receiver android:name=".receivers.DeactivationReceiver" android:exported="false"><intent-filter><action android:name="com.example.deviceowner.DEACTIVATE_DEVICE" /></intent-filter></receiver>

        <!-- Services -->
        <service android:name=".monitoring.SecurityMonitorService" android:foregroundServiceType="dataSync" />
        <service android:name=".services.remote.RemoteManagementService" android:foregroundServiceType="dataSync" />
        <service android:name=".services.lock.SoftLockOverlayService" android:foregroundServiceType="dataSync" />
        <service android:name=".services.lock.SoftLockMonitorService" android:foregroundServiceType="dataSync" />
        <service android:name=".services.security.FirmwareSecurityMonitorService" android:foregroundServiceType="dataSync" />
        <service android:name=".services.heartbeat.HeartbeatService" android:foregroundServiceType="dataSync" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS" android:resource="@xml/file_paths" />
        </provider>

    </application>
</manifest>
