<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Device information permissions (SIM detection requires these) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" tools:ignore="ProtectedPermissions" />
    
    <!-- Storage permissions for device data collection -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Camera permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    
    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    
    <!-- Boot receiver permission -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- Overlay permissions for soft lock -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Device Owner specific permissions for complete control -->
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
    <uses-permission android:name="android.permission.STATUS_BAR" />
    <uses-permission android:name="android.permission.SYSTEM_UI" />
    <uses-permission android:name="android.permission.INTERNAL_SYSTEM_WINDOW" />
    
    <!-- Wake lock permission -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Auto-update from GitHub Releases (Device Owner silent install) -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.INSTALL_PACKAGES" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.DELETE_PACKAGES" tools:ignore="ProtectedPermissions" />
    
    <!-- Power management permissions -->
    <uses-permission android:name="android.permission.DEVICE_POWER" />
    <uses-permission android:name="android.permission.REBOOT" />
    
    <!-- Notifications (Android 13+) for update progress -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Foreground service permission (Android 9+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    
    <!-- Account management permissions -->
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name=".DeviceOwnerApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/nexivo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nexivo"
        android:supportsRtl="true"
        android:theme="@style/Theme.DEVICEOWNER"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <!-- Android 14+ (API 34+): Declare foreground service types used by the app -->
        <property
            android:name="android.app.PROPERTY_FOREGROUND_SERVICE_TYPES"
            android:value="dataSync" />
        <!-- Registration Status Activity - Determines launch flow -->
        <activity
            android:name=".ui.activities.RegistrationStatusActivity"
            android:exported="true"
            android:theme="@style/Theme.DEVICEOWNER">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DEVICEOWNER" />

        <!-- FRP Status Activity - Enterprise Factory Reset Protection status -->
        <activity
            android:name=".ui.activities.FrpStatusActivity"
            android:exported="false"
            android:theme="@style/Theme.DEVICEOWNER" />

        <!-- Device Registration Activity - Input loan number for registration -->
        <activity
            android:name=".presentation.activities.DeviceRegistrationActivity"
            android:exported="false"
            android:theme="@style/Theme.DEVICEOWNER" />

        <!-- Registration Error Viewer - Lists and opens HTML error files (DeviceOwner/RegistrationErrors) -->
        <activity
            android:name=".presentation.activities.RegistrationErrorViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.DEVICEOWNER" />

        <!-- Device Data Collection Activity - Collects and displays device data for user verification -->
        <activity
            android:name=".ui.activities.DeviceDataCollectionActivity"
            android:exported="false"
            android:theme="@style/Theme.DEVICEOWNER" />



        <!-- Enhanced Soft Lock Activity - Kotlin Compose implementation -->
        <activity
            android:name=".ui.activities.lock.EnhancedSoftLockActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true"
            android:theme="@style/Theme.DEVICEOWNER"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden|navigation" />

        <!-- SIM Change Overlay - Full-screen warning when SIM card is changed -->
        <activity
            android:name=".ui.activities.SIMChangeOverlayActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.DEVICEOWNER" />

        <!-- Hard Lock Activity - Kiosk mode screen when device is hard locked -->
        <activity
            android:name=".ui.activities.lock.HardLockActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true"
            android:noHistory="false"
            android:finishOnTaskLaunch="false"
            android:clearTaskOnLaunch="false"
            android:theme="@style/Theme.DEVICEOWNER"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden|navigation" />

        <!-- Android 12+ GET_PROVISIONING_MODE handler -->
        <activity
            android:name=".ui.activities.provisioning.ProvisioningModeActivity"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.app.action.GET_PROVISIONING_MODE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Device Compatibility Check Activity - Validates device before provisioning -->
        <activity
            android:name=".ui.activities.provisioning.DeviceCompatibilityCheckActivity"
            android:exported="true"
            android:theme="@style/Theme.DEVICEOWNER" />

        <!-- Data Privacy Consent - Shown on first install, before loan number input -->
        <activity
            android:name=".ui.activities.provisioning.DataPrivacyConsentActivity"
            android:exported="false"
            android:theme="@style/Theme.DEVICEOWNER" />

        <!-- Provisioning Progress Activity - Shows installation status -->
        <activity
            android:name=".ui.activities.provisioning.ProvisioningProgressActivity"
            android:exported="true"
            android:theme="@style/Theme.DEVICEOWNER" />

        <!-- Compatibility Success Activity - Shows when device meets all requirements -->
        <activity
            android:name=".ui.activities.provisioning.CompatibilitySuccessActivity"
            android:exported="true"
            android:theme="@style/Theme.DEVICEOWNER" />

        <activity
            android:name=".ui.activities.provisioning.PolicyComplianceActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.app.action.ADMIN_POLICY_COMPLIANCE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Device Admin Receiver -->
        <receiver
            android:name=".receivers.AdminReceiver"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLE_REQUESTED" />
                <action android:name="android.app.action.PROVISION_MANAGED_DEVICE" />
                <action android:name="android.app.action.PROVISION_MANAGED_DEVICE_FROM_TRUSTED_SOURCE" />
                <action android:name="android.app.action.ACTION_PASSWORD_CHANGED" />
                <action android:name="android.app.action.ACTION_PASSWORD_FAILED" />
                <action android:name="android.app.action.ACTION_PASSWORD_SUCCEEDED" />
            </intent-filter>
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver" />
        </receiver>
        
        <!-- QR Code Provisioning Receiver -->
        <receiver
            android:name=".receivers.QRProvisioningReceiver"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.app.action.PROVISION_MANAGED_DEVICE" />
                <action android:name="android.app.action.PROVISION_MANAGED_DEVICE_FROM_TRUSTED_SOURCE" />
                <action android:name="android.app.action.PROVISIONING_SUCCESSFUL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <!-- Boot Receiver - High priority so persistent hard lock is re-applied first on boot -->
        <receiver
            android:name=".receivers.BootReceiver"
            android:exported="false"
            android:enabled="true"
            android:directBootAware="true">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <!-- Update Installation Receiver - handles PackageInstaller callbacks -->
        <receiver
            android:name=".update.UpdateReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.deviceowner.INSTALL_COMPLETE" />
            </intent-filter>
        </receiver>

        <!-- Package Removal Receiver -->
        <receiver
            android:name=".receivers.PackageRemovalReceiver"
            android:exported="false"
            android:enabled="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_DATA_CLEARED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>



        <!-- Registration Success Activity - Shows success screen with Nexivo logo -->
        <!-- IMPORTANT: App stays VISIBLE after registration for better service reliability -->
        <!-- NO excludeFromRecents, NO noHistory, NO taskAffinity="" -->
        <!-- This ensures heartbeat sends reliably and services continue working -->
        <activity
            android:name=".ui.activities.RegistrationSuccessActivity"
            android:exported="false"
            android:theme="@style/Theme.DEVICEOWNER"
            android:alwaysRetainTaskState="true"
            android:finishOnTaskLaunch="false" />



        <!-- Services -->
        <!-- Critical services marked as directBootAware for zero-second persistence -->
        <service
            android:name=".monitoring.SecurityMonitorService"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            android:directBootAware="true" />

        <service
            android:name=".services.RemoteManagementService"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            android:directBootAware="true" />

        <!-- Enhanced Soft Lock Services -->
        <service
            android:name=".services.SoftLockOverlayService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <service
            android:name=".services.SoftLockMonitorService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <service
            android:name=".services.FirmwareSecurityMonitorService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Local JSON Data Server Service - Serves device data via HTTP -->
        <service
            android:name=".services.LocalDataServerService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            android:directBootAware="true" />

        <!-- File Provider for sharing log files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
